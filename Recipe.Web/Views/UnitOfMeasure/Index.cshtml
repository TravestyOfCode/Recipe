@model Recipe.Web.Application.Features.UnitOfMeasure.UnitOfMeasureListModel

@{
    ViewData["Title"] = "Unit of Measures";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UnitOfMeasures[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitOfMeasures[0].Abbreviation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitOfMeasures[0].ConversionToGramsRatio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.UnitOfMeasures) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Abbreviation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConversionToGramsRatio)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<partial name="PageNavPartial.cshtml" model="Model.PageResult" />